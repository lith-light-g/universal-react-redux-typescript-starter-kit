{
  "name": "universal-react-redux-typescript-starter-kit",
  "version": "1.0.0",
  "description": "A minimal starter kit with React, Redux, server side rendering with React-Router 4, hot reloading, and Webpack 2. 100% TypeScript.",
  "scripts": {
    "start": "npm run start:dev",
    "start:prod": "cross-env NODE_ENV=production node dist/server/src/server.js",
    "start:dev": "ts-node ./src/server.tsx",
    "build:dev": "cross-env NODE_ENV=development ts-node scripts/build.ts",
    "build:prod": "cross-env NODE_ENV=production ts-node scripts/build.ts",
    "lint": "tslint --type-check -p tsconfig.json ./src/**/*.ts*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lith-light-g/universal-react-redux-typescript-starter-kit.git"
  },
  "keywords": [
    "typescript",
    "webpack",
    "react",
    "react-router",
    "redux",
    "universal",
    "hot",
    "boilerplate",
    "starter",
    "kit",
    "minimal"
  ],
  "author": "Fran√ßois Nguyen (https://github.com/lith-light-g)",
